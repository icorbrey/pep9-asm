{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Pep/9 Assembly",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "comment.line",
					"match": ";[^;].*"
				},
				{
					"name": "comment.block.documentation",
					"match": ";;.*"
				},
				{
					"name": "entity.name.function",
					"match": "(?i)\\bCALL\\b"
				},
				{
					"name": "entity.name.class",
					"match": "(?i)\\bBR([LG][ET]|EQ|NE|[VC])?\\b"
				},
				{
					"name": "entity.name.function",
					"match": "(?i)\\b(DEC[IO]|HEXO|STRO)\\b"
				},
				{
					"name": "keyword.other",
					"match": "(?i)(\\b(ADD|SUB)sp|(\\s|^)\\.(EQUATE|BLOCK|WORD|ASCII|ADDRSS|END))\\b"
				},
				{
					"name": "keyword.operator",
					"match": "(?i)\\b(NOT|NEG|(AS|RO)[LR]|ADD|SUB|AND|OR|(CP|LD|ST)[WB])[ax]\\b"
				},
				{
					"name": "keyword.control",
					"match": "(?i)\\b(STOP|RET(TR)?|MOV(SPA|FLGA|AFLG))\\b"
				},
				{
					"name": "entity.name.tag",
					"match": "(?i)\\b(i|d|n|x|s(x|fx?)?)\\b",
					"begin": ",",
					"end": " "
				},
				{
					"name": "constant.numeric",
					"match": "-?\\b(\\d+|0x\\d{4})\\b"
				},
				{
					"name": "variable.parameter",
					"match": "^[A-Za-z][A-Za-z0-9]{1,6}\\b",
					"begin": "",
					"end": ":"
				},
				{
					"name": "variable.name",
					"match": "\\b[A-Za-z][A-Za-z0-9]{1,6}\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.pep9",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.pep9",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.pep"
}
