{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Pep/9 Assembly",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "comment.line.pep9",
					"match": ";[^;]*$"
				},
				{
					"name": "comment.block.documentation",
					"match": ";;.*$"
				},
				{
					"name": "variable.name",
					"match": "^[A-Za-z0-9]{1,7}\\b",
					"begin": "",
					"end": ":"
				},
				{
					"name": "keyword.control",
					"match": "(?i)\\b(STOP|RET|RETTR|MOVSPA|MOVFLGA|MOVAFLG|BR(LE|LT|EQ|NE|GE|GT|V|C)?|CALL|NOPn?)\\b"
				},
				{
					"name": "keyword.control.operator",
					"match": "(?i)\\b((NOT|NEG|ASL|ASR|ROL|ROR|ADD|SUB|AND|OR|CPW|CPB|LDW|LDB|STW|STB)[ax]|(ADD|SUB)sp)\\b"
				},
				{
					"name": "keyword.other",
					"match": "(?i)((\\s|^)\\.(EQUATE|BLOCK|WORD|ASCII|ADDRSS|END)|\\b(DEC[IO]|HEXO|STRO))\\b"
				},
				{
					"name": "entity.name.tag",
					"begin": ",",
					"match": "(?i)\\b(i|d|n|s|sf|x|sx|sfx)\\b",
					"end": " "
				},
				{
					"name": "constant.numeric",
					"match": "\\b(\\d+|0x\\d{4})\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.pep9",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.pep9",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.pep"
}
